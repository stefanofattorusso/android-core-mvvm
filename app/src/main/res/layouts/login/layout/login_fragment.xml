<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.stefattorusso.coremvvm.ui.login.view.LoginViewModel"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="Login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:onClick="@{() -> viewModel.loginWithFacebook()}"
            app:visibleGone="@{safeUnbox(viewModel.isLoggedIn())}"
            app:layout_constraintBottom_toTopOf="@id/login_google"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Facebook"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{() -> viewModel.loginWithGoogle()}"
            app:visibleGone="@{safeUnbox(viewModel.isLoggedIn())}"
            app:layout_constraintBottom_toTopOf="@id/login_email"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Google"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{() -> viewModel.loginWithEmail()}"
            app:visibleGone="@{safeUnbox(viewModel.isLoggedIn())}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Email"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:visibleGone="@{safeUnbox(!viewModel.isLoggedIn())}"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Logout"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>