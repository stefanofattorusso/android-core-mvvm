<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="imageModel"
            type="com.stefattorusso.coremvvm.data.models.ImageModel"/>

        <variable
            name="isLoading"
            type="boolean"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent_view"
        android:background="@color/dark_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/image_container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/loaderView"
                style="?android:attr/progressBarStyle"
                app:visibleGone="@{!isLoading}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                android:transitionName="image"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/author_view"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_marginBottom="4dp"
                android:text="@{imageModel.author}"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="@+id/filename_view"
                app:layout_constraintEnd_toEndOf="@+id/filename_view"
                tools:text="Author name"
                app:layout_constraintBottom_toTopOf="@+id/filename_view"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filename_view"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_margin="16dp"
                tools:text="Filename"
                android:text="@{imageModel.filename}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>